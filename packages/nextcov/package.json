{
  "name": "nextcov",
  "version": "0.1.0",
  "description": "Collect test coverage for Playwright E2E tests in Next.js applications",
  "author": "Steve Zhang",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "import": "./dist/playwright/index.js",
      "default": "./dist/playwright/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "v8",
    "istanbul",
    "coverage",
    "next.js",
    "playwright",
    "cdp",
    "testing"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@bcoe/v8-coverage": "^1.0.0",
    "@jridgewell/sourcemap-codec": "^1.4.0",
    "acorn": "^8.12.0",
    "ast-v8-to-istanbul": "^0.3.0",
    "convert-source-map": "^2.0.0",
    "glob": "^11.0.0",
    "monocart-coverage-reports": "^2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/convert-source-map": "^2.0.3",
    "@types/node": "^22.0.0",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-lib-source-maps": "^5.0.0",
    "istanbul-reports": "^3.1.0",
    "rimraf": "^6.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stevez/nextcov.git"
  }
}
