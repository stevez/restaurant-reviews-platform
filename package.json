{
  "name": "restaurant-reviews-platform",
  "version": "1.0.0",
  "description": "Full-stack restaurant review platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/build.js",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:unit": "vitest --project unit --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:browser": "vitest --project browser --run",
    "test:browser:headed": "vitest --ui --project browser --browser.headless=false",
    "typecheck": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:setup": "node scripts/setup-db.js",
    "db:reset": "node scripts/reset-db.js",
    "db:start": "docker compose up -d postgres || docker-compose up -d postgres",
    "db:stop": "docker compose down || docker-compose down",
    "e2e:setup-db": "npx ts-node e2e/setup-db.ts",
    "e2e:teardown-db": "npx ts-node e2e/teardown-db.ts",
    "start:e2e": "cross-env E2E_MODE=true DATABASE_URL_BASE=postgresql://test:test@localhost:5434 NODE_V8_COVERAGE=.v8-coverage CDP_PORT=9230 NODE_OPTIONS=--inspect=9230 next start",
    "e2e:clean": "rimraf .v8-coverage coverage/e2e",
    "playwright-test": "playwright test --config=e2e/playwright.config.ts",
    "e2e:run": "start-server-and-test start:e2e http-get://localhost:3000 playwright-test",
    "e2e": "npm run e2e:clean && npm run e2e:setup-db && npm run e2e:run && npm run e2e:teardown-db",
    "e2e:headed": "npm run e2e:setup-db && start-server-and-test start:e2e http-get://localhost:3000 \"playwright test --config=e2e/playwright.config.ts --headed\" && npm run e2e:teardown-db",
    "e2e:ui": "npm run e2e:setup-db && start-server-and-test start:e2e http-get://localhost:3000 \"playwright test --config=e2e/playwright.config.ts --ui\" && npm run e2e:teardown-db",
    "coverage:merge": "npx ts-node scripts/merge-coverage.ts",
    "coverage:all": "npm run test:coverage && npm run e2e && npm run coverage:merge"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "jose": "^6.1.1",
    "jsonwebtoken": "^9.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.66.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testcontainers/postgresql": "^11.9.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dockerode": "^3.3.47",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.1.0",
    "dockerode": "^4.0.9",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.2.0",
    "monocart-coverage-reports": "^2.12.9",
    "monocart-reporter": "^2.9.23",
    "node-mocks-http": "^1.17.2",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "postcss": "^8.4.31",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.2",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^3.4.1",
    "testcontainers": "^11.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14",
    "vitest-browser-react": "^2.0.2"
  }
}
