{
  "name": "restaurant-reviews-platform",
  "version": "1.0.0",
  "description": "Full-stack restaurant review platform",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--inspect=9230 next dev",
    "build": "node scripts/build.js",
    "postinstall": "(prisma generate || echo Prisma generation skipped) && node scripts/patch-ps-tree.js",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:component",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:component": "vitest run --config vitest.component.config.mts",
    "test:component:headed": "vitest --watch --config vitest.component.config.mts --browser.headless=false",
    "typecheck": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:setup": "node scripts/setup-db.js",
    "db:reset": "node scripts/reset-db.js",
    "db:start": "docker compose up -d postgres || docker-compose up -d postgres",
    "db:stop": "docker compose down || docker-compose down",
    "e2e:setup-db": "npx ts-node e2e/setup-db.ts",
    "e2e:teardown-db": "npx ts-node e2e/teardown-db.ts",
    "build:e2e": "cross-env E2E_MODE=true npm run build",
    "start:e2e": "cross-env E2E_MODE=true DATABASE_URL_BASE=postgresql://test:test@localhost:5434 NODE_V8_COVERAGE=.v8-coverage NODE_OPTIONS=--inspect=9230 next start",
    "e2e:clean": "rimraf coverage/e2e",
    "playwright-test": "playwright test",
    "e2e:run": "start-server-and-test start:e2e http-get://localhost:3000 playwright-test",
    "e2e": "npm run e2e:clean && npm run e2e:setup-db && npm run e2e:run && npm run e2e:teardown-db",
    "e2e:headed": "npm run e2e:setup-db && start-server-and-test start:e2e http-get://localhost:3000 \"playwright test --headed\" && npm run e2e:teardown-db",
    "e2e:ui": "npm run e2e:setup-db && start-server-and-test start:e2e http-get://localhost:3000 \"playwright test --ui\" && npm run e2e:teardown-db",
    "coverage:strip": "node scripts/strip-coverage-directives.js",
    "coverage:merge": "npm run coverage:strip -- coverage/unit/coverage-final.json && npm run coverage:strip -- coverage/component/coverage-final.json && nextcov merge coverage/unit coverage/component coverage/e2e -o coverage/merged",
    "e2e:finalize": "npx ts-node e2e/finalize-coverage.ts",
    "dev:e2e": "cross-env NODE_OPTIONS=--inspect=9230 next dev",
    "e2e:dev:run": "start-server-and-test dev:e2e http-get://localhost:3000 \"playwright test --workers=1\"",
    "db:wait": "node scripts/wait-for-db.js",
    "db:wait:local": "cross-env DATABASE_URL=postgresql://restaurant_user:restaurant_password@localhost:5433/restaurant_reviews node scripts/wait-for-db.js",
    "e2e:dev": "npm run db:start && npm run db:wait && npm run db:push && npm run e2e:clean && rimraf .next e2e/.container-id && npm run e2e:dev:run",
    "e2e:dev:local": "npm run db:start && npm run db:wait:local && npm run db:push && npm run e2e:clean && rimraf .next e2e/.container-id && npm run e2e:dev:run"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "jose": "^6.1.1",
    "jsonwebtoken": "^9.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.66.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76"
  },
  "browserslist": [
    "chrome 111",
    "edge 111",
    "firefox 111",
    "safari 16.4"
  ],
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testcontainers/postgresql": "^11.9.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/dockerode": "^3.3.47",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.16",
    "coverage-single-html": "^0.1.4",
    "cross-env": "^10.1.0",
    "dockerode": "^4.0.9",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.2.0",
    "nextcov": "^0.8.4",
    "node-mocks-http": "^1.17.2",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "postcss": "^8.4.31",
    "prisma": "^6.19.0",
    "rimraf": "^6.1.2",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^3.4.1",
    "testcontainers": "^11.9.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14",
    "vitest-browser-react": "^2.0.2"
  }
}
